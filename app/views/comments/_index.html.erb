<% comments.all.order(created_at: :desc).each do |comment| %>
  <% unless comment.id.nil? %>
    <p><strong><%="#{comment.user.first_name}さんのメッセージ"%></strong></p>
    <p><%= comment.content %></p>
    <span>投稿日時:<%= time_ago_in_words(comment.created_at) %></span>
    <% if comment.user == current_user %>
      <span >　<%= link_to shop_comment_path(comment.shop_id, comment.id), method: :delete, remote: true do %><i class="far fa-trash-alt fa-lg"></i><% end %></span></p>
    <% end %>


