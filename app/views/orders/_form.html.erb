<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation2">
      <h2><%= pluralize(order.errors.count, "error") %> この注文の保存ができません。</h2>

      <ul>
        <% order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :氏名 %>
    <%= form.text_field :name, size: 40 %>
  </div>

  <div class="field">
    <%= form.label :住所 %>
    <%= form.text_area :address, rows: 3, cols: 40 %>
  </div>

  <div class="field">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number %>
  </div>
  
  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, size: 40 %>
  </div> 

  <div class="field">
    <%= form.label :支払い方法 %>
    <%= form.select :payment_method, Order.payment_methods.keys, prompt: '支払い方法を選択してください。' %>
  </div>
<br>
<br>
  <div class="actions">
    <%= form.submit '注文を確定する' %>
  </div>
<% end %>