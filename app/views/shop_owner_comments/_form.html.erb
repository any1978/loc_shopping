  <div class="shop_owner_comment-form">
    <%= form_with(model: [shop, shop_owner_comment]) do |f| %>
      <div class="input-field">
        <%= f.text_area :content, class: "materialize-textarea" %>
        <%= f.label :content, "コメント内容", class: "active" %>
        <span class="helper-text" data-error="wrong" data-success="right">1から140文字以内</span>
      </div>
      <div class="shop_owner_comment-button">
        <%= button_tag :type => "submit", :class =>"waves-effect waves-light btn" do %>
          <%= "submit" %>
        <% end %>
      </div>
    <% end %>
  </div>
