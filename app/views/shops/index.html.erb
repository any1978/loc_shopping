<div class="container-fluid" style="margin-top:80px">
<% if current_user.try(:admin?) %>
  <h3>周辺のお店を探してみる(admin）</h3>
<% else %>
  <h3>周辺のお店を探す</h3>
<% end %>



 <%= form_tag root_path, method: :get do %> 
 <div>
      <%= text_field_tag :search, params[:search], placeholder: "周辺のお店を検索してみよう！（例）○○県○○市○○町", class: "form-control", id: "autolocation" %>
  </div> 

  <div>
    <%= submit_tag "検索", class: "btn btn-normal btn-block" %>
  </div>
<% end %> 

<br/><hr/><br/>


<h2>shop一覧</h2>
  <div class="card-group" style="width:300px"> 
    <% @shops.each do |shop| %>
        <div class="card-img-top"><%= image_tag(shop.image.url) if shop.image && shop.image.url %></div>
        <div class="card-body">
          <h4 class="card-title"><%= shop.name %></h4>
          <p class="card-text"><%= shop.introduction %></p>
          <p class="btn" ><%= link_to 'ショップページを見る', shop_path(shop.id) %></p>
        </div>
    <% end %>
  </div>

<%
=begin%>
 
<div id="right"> 

    <!-- GOOGLE MAP WILL BE HERE -->

<div id="map" style="width: 100%; height: 100%"></div>

    <script src="https://maps.googleapis.com/maps/api/js"></script>
    <script>
        function initialize(shops) {
          var location = {lat: 44.5403, lng: -78.5463}

          if (shops.length > 0) {
            location = {lat: shops[0].latitude, lng: shops[0].longitude}
          }

          var map = new google.maps.Map(document.getElementById('map'), {
            center: location,
            zoom: 12
          });

          var marker, inforwindow;

          shops.forEach(function(shop) {
            marker = new google.maps.Marker({
              position: {lat: shop.latitude, lng: shop.longitude},
              map: map
            });
            inforwindow.open(map, marker);
          })
        }

        google.maps.event.addDomListener(window, 'load', function() {
          initialize(<%= raw @arrshops.to_json %>)
        });
    </script>
  </div>
</div>

<script>
  $(function() {
    $("#autolocation").geocomplete();
  })
</script>  
<%
=end%>
